def fibonacci_even(N):
    '''Each new term in a sequence of even fibonacci numbers 
    is generated by multiplying the current term by 4, 
    then adding the previous term of that sequence'''
    
    if N<2:
        return 0
    total = 0
    last = 0
    current = 2
    while current<N:
        total += current
        temp_cur = current
        current = current*4+last
        last = temp_cur
    return total

T = int(input().strip())
for t in range(T):
    N = int(input().strip())
    print(fibonacci_even(N))
